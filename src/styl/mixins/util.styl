.videoWrapper
    position relative
    padding-bottom 56.25%
    padding-top 25px
    height 0
.videoWrapper iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.fade-out
  visibility hidden
  opacity 0
  transition visibility 0s linear 0.25s, opacity 0.25s linear
.fade-in
  visibility visible
  opacity 1
  transition visibility 0s linear 0s, opacity 0.25s linear
    
.show
	display block !important
.hide
	display none !important
