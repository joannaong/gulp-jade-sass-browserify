mixin meta
	//- title
	title Website

	//- favicon
	link(rel="icon" type="image/x-icon" href="#{locals.env.host}asset/meta/favicon.ico")

	//- SEO
	meta(charset="utf-8")
	meta(name='description', content='Website description')

	//- responsive
	meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')

	//- facebook
	meta(property="og:site_name", content="Website Name")
	meta(property="og:title", content="Website Name")
	meta(property="og:type", content="tv_show")
	meta(property="og:url", content="#{locals.env.host}")
	meta(property="og:image", content="#{locals.env.host}asset/meta/facebook_1200x630.jpg")
	meta(property="og:description", content="Website description")

	//- twitter
	meta(name="twitter:card" content="summary_large_image")
	meta(name="twitter:site" content="@twitterhandle")
	meta(name="twitter:creator" content="@twitterhandle")
	meta(name="twitter:title" content="Website Name")
	meta(name="twitter:description" content="Website description")
	meta(name="twitter:image" content="#{locals.env.host}asset/meta/facebook_1200x630.jpg")

	//- mobile
	meta(name="apple-mobile-web-app-capable", content="yes")
	meta(name="apple-mobile-web-app-status-bar-style", content="black")
	link(rel="apple-touch-icon", href="#{locals.env.host}asset/meta/appleD_180x180.jpg")
	link(rel="apple-touch-icon", sizes="76x76", href="#{locals.env.host}asset/meta/appleD_76x76.jpg")
	link(rel="apple-touch-icon", sizes="120x120", href="#{locals.env.host}asset/meta/appleD_120x120.jpg")
	link(rel="apple-touch-icon", sizes="152x152", href="#{locals.env.host}asset/meta/appleD_152x152.jpg")
